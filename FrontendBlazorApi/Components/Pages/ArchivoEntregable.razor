@page "/archivoentregables"

@using System.Net.Http.Json
@using FrontendBlazorApi.Models
@using ArchivoEntregableModel = FrontendBlazorApi.Models.ArchivoEntregable
@using ArchivoModel = FrontendBlazorApi.Models.Archivo
@using EntregableModel = FrontendBlazorApi.Models.Entregable

@inject IHttpClientFactory fabricaHttp
@rendermode InteractiveServer

<PageTitle>ArchivoEntregable</PageTitle>

<h3>Gestión de ArchivoEntregable</h3>

<div class="mb-3 d-flex gap-2">
    <button type="button" class="btn btn-outline-secondary" @onclick="ProbarConexion">Probar conexión</button>
    <button type="button" class="btn btn-outline-primary" @onclick="CargarArchivoEntregables">Mostrar todos</button>
    <button type="button" class="btn btn-outline-dark" @onclick="LimpiarFormulario">Limpiar</button>
</div>

@if (!string.IsNullOrWhiteSpace(mensaje))
{
    <div class="@claseAviso" role="alert">@mensaje</div>
}

<h4>Formulario de ArchivoEntregable</h4>

<EditForm Model="archivo_entregableActual" OnValidSubmit="GuardarSegunEstado" FormName="ArchivoEntregableForm">
    <DataAnnotationsValidator />
    <ValidationSummary />
    <div class="row g-3">
        <div class="col-md-6">
            <label class="form-label">Archivo (FK)</label>
            <InputSelect class="form-control" @bind-Value="archivo_entregableActual.ArchivoId">
                <option value="">-- Seleccione un Archivo --</option>
                @foreach (var archivo in listaArchivos)
                {
                    <option value="@archivo.Id">@archivo.Nombre</option>
                }
            </InputSelect>
        </div>
        <div class="col-md-6">
            <label class="form-label">Entregable (FK)</label>
            <InputSelect class="form-control" @bind-Value="archivo_entregableActual.EntregableId">
                <option value="">-- Seleccione un Entregable --</option>
                @foreach (var entregable in listaEntregables)
                {
                    <option value="@entregable.Id">@entregable.Titulo</option>
                }
            </InputSelect>
        </div>
    </div>

    <div class="mt-3 d-flex flex-wrap gap-2">
        <button type="submit" class="btn btn-primary">@textoBotonGuardar</button>
        <button type="button" class="btn btn-warning" @onclick="ActualizarArchivoEntregable" disabled="@(!existeArchivoEntregable)">Actualizar</button>
        <button type="button" class="btn btn-danger" @onclick="EliminarArchivoEntregable" disabled="@(!existeArchivoEntregable)">Eliminar</button>
    </div>
</EditForm>

<hr />

@if (cargando)
{
    <p><em>Cargando archivo_entregable...</em></p>
}
else if (listaArchivoEntregables.Count == 0)
{
    <p>No hay archivo_entregable disponibles.</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>IdArchivo</th>
                <th>IdEntregable</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var a in listaArchivoEntregables)
            {
                <tr>
                    <td>@a.ArchivoId</td>
                    <td>@a.EntregableId</td>
                    <td>
                        <button type="button" class="btn btn-sm btn-outline-primary"
                                @onclick="@(() => CargarEnFormulario(a))">
                            Cargar
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<ArchivoEntregableModel> listaArchivoEntregables = new(); 
    private List<ArchivoModel> listaArchivos = new();
    private List<EntregableModel> listaEntregables = new();
    
    [SupplyParameterFromForm]
    private ArchivoEntregableModel archivo_entregableActual { get; set; } = new(); 
    private bool existeArchivoEntregable = false;
    private string textoBotonGuardar = "Crear";
    private string mensaje = "";
    private string claseAviso = "alert alert-info";
    private bool cargando = false;
    private const string urlBaseApi = "api/archivo_entregable"; 


    protected override async Task OnInitializedAsync()
    {
        await CargarArchivoEntregables();
        await CargarArchivos();
        await CargarEntregables();
    }

    private async Task CargarArchivoEntregables()
    {
        try
        {
            cargando = true;
            var cliente = fabricaHttp.CreateClient("ApiUsuarios");
            var httpResponse = await cliente.GetAsync(urlBaseApi);

            if (httpResponse.IsSuccessStatusCode)
            {
                if (httpResponse.Content.Headers.ContentLength > 0)
                {
                     var respuesta = await httpResponse.Content.ReadFromJsonAsync<RespuestaApi<List<ArchivoEntregableModel>>>();
                     listaArchivoEntregables = respuesta?.Datos ?? new List<ArchivoEntregableModel>();
                     mensaje = $"Se cargaron {listaArchivoEntregables.Count} archivo_entregable(s).";
                }
                else
                {
                    listaArchivoEntregables = new List<ArchivoEntregableModel>();
                    mensaje = "La API respondió OK, pero sin contenido.";
                }

                 claseAviso = "alert alert-success";
            }
        }
        catch (Exception error)
        {
            mensaje = $"Error al listar ArchivoEntregable: {error.Message}. Verifique la conexión con la API.";
            claseAviso = "alert alert-danger";
        }
        finally
        {
            cargando = false;
        }
    }
    private async Task CargarArchivos()
    {
        var cliente = fabricaHttp.CreateClient("ApiUsuarios");
        var respuestaApi = await cliente.GetFromJsonAsync<RespuestaApi<List<ArchivoModel>>>("api/archivo");
        if (respuestaApi?.Datos != null)
        {
            listaArchivos = respuestaApi.Datos;
        }
           else { listaArchivos = new List<ArchivoModel>(); }
    }
    private async Task CargarEntregables()
    {
        var cliente = fabricaHttp.CreateClient("ApiUsuarios");
        var respuestaApi = await cliente.GetFromJsonAsync<RespuestaApi<List<EntregableModel>>>("api/entregable");
        if (respuestaApi?.Datos != null)
        {
            listaEntregables = respuestaApi.Datos;
        }
           else { listaEntregables = new List<EntregableModel>(); }
    }

    private async Task GuardarSegunEstado()
    {
        if (existeArchivoEntregable)
            await ActualizarArchivoEntregable();
        else
            await CrearArchivoEntregable();
    }

    private async Task CrearArchivoEntregable()
    {
        LimpiarMensajes();

        if (archivo_entregableActual.ArchivoId <= 0 || archivo_entregableActual.EntregableId <= 0)
        {
            mensaje = "Debe seleccionar un Archivo y un Entregable válidos para crear la asociación.";
            claseAviso = "alert alert-warning";
            return;
        }

        // IMPORTANTE: Usamos los nombres de la API (IdArchivo, IdEntregable)
        var datosParaCrear = new
        {
            IdArchivo = archivo_entregableActual.ArchivoId,
            IdEntregable = archivo_entregableActual.EntregableId,
        };

        try
        {
            var cliente = fabricaHttp.CreateClient("ApiUsuarios");
            var respuesta = await cliente.PostAsJsonAsync(urlBaseApi, datosParaCrear);

            if (respuesta.IsSuccessStatusCode)
            {
                mensaje = "Asociación Archivo-Entregable creada correctamente.";
                claseAviso = "alert alert-success";

                await CargarArchivoEntregables();
                
                archivo_entregableActual = new ArchivoEntregableModel(); 
                existeArchivoEntregable = false;
                textoBotonGuardar = "Crear";
            }
            else
            {
                var detalle = await respuesta.Content.ReadAsStringAsync();
                mensaje = $"No se pudo crear la asociación. Detalle: {detalle}";
                claseAviso = "alert alert-danger";
            }
        }
        catch (Exception error)
        {
            mensaje = $"Error al crear Archivo-Entregable: {error.Message}";
            claseAviso = "alert alert-danger";
        }
    }

    private async Task ActualizarArchivoEntregable()
    {
        LimpiarMensajes();

        mensaje = "La actualización no está permitida en esta tabla de relación pura. Elimine y cree la nueva asociación.";
        claseAviso = "alert alert-warning";
        return;
    }

    private async Task EliminarArchivoEntregable()
    {
        LimpiarMensajes();

        if (archivo_entregableActual.ArchivoId <= 0 || archivo_entregableActual.EntregableId <= 0)
        {
            mensaje = "Debe cargar un registro de Archivo y Entregable válido para eliminar.";
            claseAviso = "alert alert-warning";
            return;
        }

        try
        {
            var cliente = fabricaHttp.CreateClient("ApiUsuarios");
            
            // RUTA CLAVE COMPUESTA: Se usa la combinación para eliminar el registro exacto
            var ruta = $"{urlBaseApi}/{archivo_entregableActual.ArchivoId}/{archivo_entregableActual.EntregableId}";
            
            var respuesta = await cliente.DeleteAsync(ruta);

            if (respuesta.IsSuccessStatusCode)
            {
                mensaje = "Asociación Archivo-Entregable eliminada correctamente.";
                claseAviso = "alert alert-success";

                await CargarArchivoEntregables();

                LimpiarFormulario();
            }
            else
            {
                var detalle = await respuesta.Content.ReadAsStringAsync();
                mensaje = $"No se pudo eliminar la asociación. Detalle: {detalle}";
                claseAviso = "alert alert-danger";
            }
        }
        catch (Exception error)
        {
            mensaje = $"Error al eliminar Archivo-Entregable: {error.Message}";
            claseAviso = "alert alert-danger";
        }
    }

    private async Task ProbarConexion()
    {
        LimpiarMensajes();

        try
        {
            var cliente = fabricaHttp.CreateClient("ApiUsuarios");
            var respuesta = await cliente.GetAsync(urlBaseApi);

            if (respuesta.IsSuccessStatusCode)
            {
                mensaje = "Conexión con la API de ArchivoEntregable verificada.";
                claseAviso = "alert alert-success";
            }
            else
            {
                mensaje = $"La API respondió con estado {(int)respuesta.StatusCode}.";
                claseAviso = "alert alert-warning";
            }
        }
        catch (Exception error)
        {
            mensaje = $"Error de conexión a la API: {error.Message}";
            claseAviso = "alert alert-danger";
        }
    }
    private void CargarEnFormulario(ArchivoEntregableModel a)
    {
        archivo_entregableActual = new ArchivoEntregableModel()
        {
            ArchivoId=a.ArchivoId,
            EntregableId = a.EntregableId
        };

        existeArchivoEntregable = true;
        textoBotonGuardar = "Actualizar";
        mensaje = "Archivo-Entregable seleccionado desde el listado. (Recuerde que la actualización no está soportada).";
        claseAviso = "alert alert-info";
    }

    private void LimpiarMensajes()
    {
        mensaje = "";
        claseAviso = "alert alert-info";
    }

    private void LimpiarFormulario()
    {
        archivo_entregableActual = new ArchivoEntregableModel();
        existeArchivoEntregable = false;
        textoBotonGuardar = "Crear";
        LimpiarMensajes();
    }
}