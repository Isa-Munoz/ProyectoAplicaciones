@page "/objetivoestrategicos"

@using System.Net.Http.Json
@using FrontendBlazorApi.Models
@using ObjetivoEstrategicoModel = FrontendBlazorApi.Models.ObjetivoEstrategico


@inject IHttpClientFactory fabricaHttp
@rendermode InteractiveServer

<PageTitle>ObjetivoEstrategico</PageTitle>

<h3>Gestión de ObjetivoEstrategico</h3>

@* ------------- BARRA DE ACCIONES GENERALES ------------- *@
<div class="mb-3 d-flex gap-2">
    <button type="button" class="btn btn-outline-secondary" @onclick="ProbarConexion">Probar conexión</button>
    <button type="button" class="btn btn-outline-primary" @onclick="CargarObjetivoEstrategicos">Mostrar todos</button>
    <button type="button" class="btn btn-outline-dark" @onclick="LimpiarFormulario">Limpiar</button>
</div>

@* ------------- MENSAJES DE ESTADO ------------- *@
@if (!string.IsNullOrWhiteSpace(mensaje))
{
    <div class="@claseAviso" role="alert">@mensaje</div>
}

@* ------------- FORMULARIO CRUD ------------- *@
<h4>Formulario de ObjetivoEstrategico</h4>

<EditForm Model="objetivoestrategicoActual" OnValidSubmit="GuardarSegunEstado" FormName="ObjetivoEstrategicoForm">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="row g-3">
        <div class="col-md-2">
            <label class="form-label">Id</label>
            <InputNumber class="form-control" @bind-Value="objetivoestrategicoActual.Id" />
        </div>

        <div class="col-md-4">
            <label class="form-label">IdVariable (FK)</label>
            <InputSelect class="form-control" @bind-Value="objetivoestrategicoActual.IdVariable">
                <option value="">-- Seleccione un ObjetivoEstrategico --</option>
                @foreach (var variableestrategica in listaVariableEstrategicas)
                {
                    <option value="@variableestrategica.Id">@variableestrategica.Titulo</option>
                }
            </InputSelect>
        </div>
        <div class="col-md-2">
            <label class="form-label">Titulo</label>
            <InputText class="form-control" @bind-Value="objetivoestrategicoActual.Titulo" />
        </div>
        <div class="col-md-2">
            <label class="form-label">Descripcion</label>
            <InputText class="form-control" @bind-Value="objetivoestrategicoActual.Descripcion" />
        </div>

    </div>

    <div class="mt-3 d-flex flex-wrap gap-2">
        <button type="submit" class="btn btn-primary">@textoBotonGuardar</button>
        <button type="button" class="btn btn-secondary" @onclick="BuscarPorId">Buscar</button>
        <button type="button" class="btn btn-warning" @onclick="ActualizarObjetivoEstrategico" disabled="@(!existeObjetivoEstrategico)">Actualizar</button>
        <button type="button" class="btn btn-danger" @onclick="EliminarObjetivoEstrategico" disabled="@(!existeObjetivoEstrategico)">Eliminar</button>
    </div>
</EditForm>

<hr />

@* ------------- LISTADO (READ/LIST) ------------- *@
@if (cargando)
{
    <p><em>Cargando objetivoestrategico...</em></p>
}
else if (listaObjetivoEstrategicos.Count == 0)
{
    <p>No hay ObjetivoEstrategico disponibles.</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>IdObjetivo</th>
                <th>Titulo</th>
                <th>Descripcion</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var a in listaObjetivoEstrategicos)
            {
                <tr>
                    <td>@a.Id</td>
                    <td>@a.IdVariable</td>
                    <td>@a.Titulo</td>
                    <td>@a.Descripcion</td>
                    <td>
                        <button type="button" class="btn btn-sm btn-outline-primary"
                                @onclick="@(() => CargarEnFormulario(a))">
                            Cargar
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    // =============================================================================
    // VARIABLES DE ESTADO DEL COMPONENTE
    // =============================================================================
    private List<ObjetivoEstrategicoModel> listaObjetivoEstrategicos = new(); 
    private List<ObjetivoEstrategicoModel> listaVariableEstrategicas = new();
    
    [SupplyParameterFromForm]
    private ObjetivoEstrategicoModel objetivoestrategicoActual { get; set; } = new(); 
    private bool existeObjetivoEstrategico = false;
    private string textoBotonGuardar = "Crear";
    private string mensaje = "";
    private string claseAviso = "alert alert-info";
    private bool cargando = false;
    private const string urlBaseApi = "api/objetivoestrategico"; 



    // =============================================================================
    // CICLO DE VIDA
    // =============================================================================
    protected override async Task OnInitializedAsync()
    {
        await CargarObjetivoEstrategicos();
        await CargarVariableEstrategicas();
    }

    // =============================================================================
    // CRUDL
    // =============================================================================

    private async Task CargarObjetivoEstrategicos()
    {
        try
        {
            cargando = true;

            var cliente = fabricaHttp.CreateClient("ApiUsuarios");

            var httpResponse = await cliente.GetAsync(urlBaseApi);

            if (httpResponse.IsSuccessStatusCode)
        {
            if (httpResponse.Content.Headers.ContentLength > 0)
            {
                 var respuesta = await httpResponse.Content.ReadFromJsonAsync<RespuestaApi<List<ObjetivoEstrategicoModel>>>();
                listaObjetivoEstrategicos = respuesta?.Datos ?? new List<ObjetivoEstrategicoModel>();
                 mensaje = $"Se cargaron {listaObjetivoEstrategicos.Count} objetivoestrategico(s).";
            }
            else
            {
                listaObjetivoEstrategicos = new List<ObjetivoEstrategicoModel>();
                mensaje = "La API respondió OK, pero sin contenido (se asumió lista vacía).";
            }

             claseAviso = "alert alert-success";
            }
        }
        catch (Exception error)
        {
            mensaje = $"Error al listar ObjetivoEstrategico: {error.Message}. Verifique la conexión con la API.";

            claseAviso = "alert alert-danger";
        }
        finally
        {
            cargando = false;
        }
    }
    private async Task CargarVariableEstrategicas()
    {
        var cliente = fabricaHttp.CreateClient("ApiUsuarios");
        var respuestaApi = await cliente.GetFromJsonAsync<RespuestaApi<List<ObjetivoEstrategicoModel>>>("api/objetivoestrategico");
        if (respuestaApi?.Datos != null)
        {
            listaObjetivoEstrategicos = respuestaApi.Datos;
        }
         else { listaObjetivoEstrategicos = new List<ObjetivoEstrategicoModel>(); }
    }

    private async Task BuscarPorId()
    {
        LimpiarMensajes();

        if (objetivoestrategicoActual.Id <= 0)
        {
            mensaje = "Debe indicar un Id válido para buscar.";
            claseAviso = "alert alert-warning";
            return;
        }

        try
        {
            var cliente = fabricaHttp.CreateClient("ApiUsuarios");
            var ruta = $"{urlBaseApi}/id/{objetivoestrategicoActual.Id}";
            RespuestaApi<List<ObjetivoEstrategicoModel>>? respuesta = await cliente.GetFromJsonAsync<RespuestaApi<List<ObjetivoEstrategicoModel>>>(ruta);
            var encontrado = respuesta?.Datos?.FirstOrDefault();

            if (encontrado is not null)
            {
                objetivoestrategicoActual = new ObjetivoEstrategicoModel
                {
                    Id = encontrado.Id,
                    IdVariable = encontrado.IdVariable,
                    Titulo = encontrado.Titulo,
                    Descripcion = encontrado.Descripcion,
                };
                existeObjetivoEstrategico = true;
                textoBotonGuardar = "Actualizar";
                mensaje = "ObjetivoEstrategico cargado en el formulario.";
                claseAviso = "alert alert-success";
            }
            else
            {
                existeObjetivoEstrategico = false;
                textoBotonGuardar = "Crear";
                mensaje = "ObjetivoEstrategico no encontrado.";
                claseAviso = "alert alert-warning";
            }
        }
        catch (Exception error)
        {
            existeObjetivoEstrategico = false;
            textoBotonGuardar = "Crear";
            mensaje = $"Error al buscar objetivoestrategico: {error.Message}";
            claseAviso = "alert alert-danger";
        }
    }

    private async Task GuardarSegunEstado()
    {
        if (existeObjetivoEstrategico)
            await ActualizarObjetivoEstrategico();
        else
            await CrearObjetivoEstrategico();
    }
    private async Task CrearObjetivoEstrategico()
    {
        LimpiarMensajes();
        var datosParaCrear = new
        {
            IdVariable = objetivoestrategicoActual.IdVariable,
            Titulo = objetivoestrategicoActual.Titulo,
            Descripcion = objetivoestrategicoActual.Descripcion,
        };

        try
        {
            var cliente = fabricaHttp.CreateClient("ApiUsuarios");
            var respuesta = await cliente.PostAsJsonAsync(urlBaseApi, datosParaCrear);

            if (respuesta.IsSuccessStatusCode)
            {
                mensaje = "ObjetivoEstrategico creado correctamente.";
                claseAviso = "alert alert-success";

                await CargarObjetivoEstrategicos();

                objetivoestrategicoActual = new ObjetivoEstrategicoModel();
                existeObjetivoEstrategico = false;
                textoBotonGuardar = "Crear";
            }
            else
            {
                var detalle = await respuesta.Content.ReadAsStringAsync();
                mensaje = $"No se pudo crear el objetivoestrategico. Detalle: {detalle}";
                claseAviso = "alert alert-danger";
            }
        }
        catch (Exception error)
        {
            mensaje = $"Error al crear objetivoestrategico: {error.Message}";
            claseAviso = "alert alert-danger";
        }
    }
    private async Task ActualizarObjetivoEstrategico()
    {
        LimpiarMensajes();

        if (objetivoestrategicoActual.Id <= 0)
        {
            mensaje = "Debe indicar el Id para actualizar.";
            claseAviso = "alert alert-warning";
            return;
        }
        var datosParaActualizar = new
        {
            IdVariable = objetivoestrategicoActual.IdVariable,
            Titulo  = objetivoestrategicoActual.Titulo,
            Descripcion = objetivoestrategicoActual.Descripcion,
        };

        try
        {
            var cliente = fabricaHttp.CreateClient("ApiUsuarios");
            var ruta = $"{urlBaseApi}/id/{objetivoestrategicoActual.Id}";

            var respuesta = await cliente.PutAsJsonAsync(ruta, datosParaActualizar);

            if (respuesta.IsSuccessStatusCode)
            {
                mensaje = "objetivoestrategico actualizado correctamente.";
                claseAviso = "alert alert-success";

                await CargarObjetivoEstrategicos();

                existeObjetivoEstrategico = true;
                textoBotonGuardar = "Actualizar";
            }
            else
            {
                var detalle = await respuesta.Content.ReadAsStringAsync();
                mensaje = $"No se pudo actualizar el objetivoestrategico. Detalle: {detalle}";
                claseAviso = "alert alert-danger";
            }
        }
        catch (Exception error)
        {
            mensaje = $"Error al actualizar objetivoestrategico: {error.Message}";
            claseAviso = "alert alert-danger";
        }
    }
    private async Task EliminarObjetivoEstrategico()
    {
        LimpiarMensajes();

        if (objetivoestrategicoActual.Id <= 0)
        {
            mensaje = "Debe indicar el Id para eliminar.";
            claseAviso = "alert alert-warning";
            return;
        }

        try
        {
            var cliente = fabricaHttp.CreateClient("ApiUsuarios");
            var ruta = $"{urlBaseApi}/id/{objetivoestrategicoActual.Id}";
            var respuesta = await cliente.DeleteAsync(ruta);

            if (respuesta.IsSuccessStatusCode)
            {
                mensaje = "objetivoestrategico eliminado correctamente.";
                claseAviso = "alert alert-success";

                await CargarObjetivoEstrategicos();

                LimpiarFormulario();
            }
            else
            {
                var detalle = await respuesta.Content.ReadAsStringAsync();
                mensaje = $"No se pudo eliminar el objetivoestrategico. Detalle: {detalle}";
                claseAviso = "alert alert-danger";
            }
        }
        catch (Exception error)
        {
            mensaje = $"Error al eliminar objetivoestrategico: {error.Message}";
            claseAviso = "alert alert-danger";
        }
    }

    // =============================================================================
    // AUXILIARES
    // =============================================================================
    private async Task ProbarConexion()
    {
        LimpiarMensajes();

        try
        {
            var cliente = fabricaHttp.CreateClient("ApiUsuarios");
            var respuesta = await cliente.GetAsync(urlBaseApi);

            if (respuesta.IsSuccessStatusCode)
            {
                mensaje = "Conexión con la API de ObjetivoEstrategico verificada.";
                claseAviso = "alert alert-success";
            }
            else
            {
                mensaje = $"La API respondió con estado {(int)respuesta.StatusCode}.";
                claseAviso = "alert alert-warning";
            }
        }
        catch (Exception error)
        {
            mensaje = $"Error de conexión a la API: {error.Message}";
            claseAviso = "alert alert-danger";
        }
    }
    private void CargarEnFormulario(ObjetivoEstrategicoModel a)
    {
        objetivoestrategicoActual = new ObjetivoEstrategicoModel()
        {
            Id=a.Id,
            IdVariable = a.IdVariable,
            Titulo  = a.Titulo,
            Descripcion = a.Descripcion,
        };

        existeObjetivoEstrategico = true;
        textoBotonGuardar = "Actualizar";
        mensaje = "ObjetivoEstrategico seleccionado desde el listado.";
        claseAviso = "alert alert-info";
    }

    private void LimpiarMensajes()
    {
        mensaje = "";
        claseAviso = "alert alert-info";
    }

    private void LimpiarFormulario()
    {
        objetivoestrategicoActual = new ObjetivoEstrategicoModel();
        existeObjetivoEstrategico = false;
        textoBotonGuardar = "Crear";
        LimpiarMensajes();
    }
}