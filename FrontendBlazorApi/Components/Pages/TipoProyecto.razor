@page "/tipoproyectos"

@using System.Net.Http.Json
@using FrontendBlazorApi.Models
@using TipoProyectoModel = FrontendBlazorApi.Models.TipoProyecto
@inject IHttpClientFactory fabricaHttp
@rendermode InteractiveServer

<PageTitle>Tipos de Proyectos</PageTitle>

<h3>Gestión de Tipos de Proyectos</h3>

@* ------------- BARRA DE ACCIONES GENERALES ------------- *@
<div class="mb-3 d-flex gap-2">
    <button type="button" class="btn btn-outline-secondary" @onclick="ProbarConexion">Probar conexión</button>
    <button type="button" class="btn btn-outline-primary" @onclick="CargarTipoProyectos">Mostrar todos</button>
    <button type="button" class="btn btn-outline-dark" @onclick="LimpiarFormulario">Limpiar</button>
</div>

@* ------------- MENSAJES DE Proyecto ------------- *@
@if (!string.IsNullOrWhiteSpace(mensaje))
{
    <div class="@claseAviso" role="alert">@mensaje</div>
}

@* ------------- FORMULARIO CRUD ------------- *@
<h4>Formulario de Tipos de Proyecto</h4>

<EditForm Model="tipoproyectoActual" OnValidSubmit="GuardarSegunTipoProyecto" FormName="TipoProyectoForm">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="row g-3">
        <div class="col-md-2">
            <label class="form-label">Id</label>
            <InputNumber class="form-control" @bind-Value="tipoproyectoActual.Id" />
        </div>

        <div class="col-md-7">
            <label class="form-label">Nombre</label>
            <InputText class="form-control" @bind-Value="tipoproyectoActual.Nombre" />
        </div>

        <div class="col-md-12">
            <label class="form-label">Descripción</label>
            <InputTextArea class="form-control" @bind-Value="tipoproyectoActual.Descripcion" rows="3" />
        </div>
    </div>

    <div class="mt-3 d-flex flex-wrap gap-2">
        <button type="submit" class="btn btn-primary">@textoBotonGuardar</button>
        <button type="button" class="btn btn-secondary" @onclick="BuscarPorId">Buscar</button>
        <button type="button" class="btn btn-warning" @onclick="ActualizarTipoProyecto" disabled="@(!existeTipoProyecto)">Actualizar</button>
        <button type="button" class="btn btn-danger" @onclick="EliminarTipoProyecto" disabled="@(!existeTipoProyecto)">Eliminar</button>
    </div>
</EditForm>

<hr />

@* ------------- LISTADO (READ/LIST) ------------- *@
@if (cargando)
{
    <p><em>Cargando tipos de proyectos...</em></p>
}
else if (listaTipoProyectos.Count == 0)
{
    <p>No hay tipos de Proyectos disponibles.</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titulo</th>
                <th>Descripción</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var u in listaTipoProyectos)
            {
                <tr>
                    <td>@u.Id</td>
                    <td>@u.Nombre</td>
                    <td>@u.Descripcion</td>
                    <td>
                        <button type="button" class="btn btn-sm btn-outline-primary"
                                @onclick="@(() => CargarEnFormulario(u))">
                            Cargar
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    // =============================================================================
    // VARIABLES DE ESTADO DEL COMPONENTE
    // =============================================================================
    private List<TipoProyectoModel> listaTipoProyectos = new();

    [SupplyParameterFromForm]
    private TipoProyectoModel tipoproyectoActual { get; set; } = new();

    private bool existeTipoProyecto = false;
    private string textoBotonGuardar = "Crear";
    private string mensaje = "";
    private string claseAviso = "alert alert-info";
    private bool cargando = false;

    // Ruta base para TipoProyectos
    private const string urlBaseApi = "api/tipoproyecto";

    // =============================================================================
    // CICLO DE VIDA
    // =============================================================================
    protected override async Task OnInitializedAsync()
    {
        await CargarTipoProyectos();
    }

    // =============================================================================
    // CRUDL
    // =============================================================================
    private async Task CargarTipoProyectos()
    {
        try
        {
            cargando = true;
            var cliente = fabricaHttp.CreateClient("ApiTipoProyectos");
            var respuesta = await cliente.GetFromJsonAsync<RespuestaApi<List<TipoProyectoModel>>>(urlBaseApi);
            listaTipoProyectos = respuesta?.Datos ?? new List<TipoProyectoModel>();

            mensaje = $"Se cargaron {listaTipoProyectos.Count} tipo(s) de Proyecto(s).";
            claseAviso = "alert alert-success";
        }
        catch (Exception error)
        {
            mensaje = $"Error al listar tipos de proyectos: {error.Message}";
            claseAviso = "alert alert-danger";
        }
        finally
        {
            cargando = false;
        }
    }

    private async Task BuscarPorId()
    {
        LimpiarMensajes();

        if (tipoproyectoActual.Id <= 0)
        {
            mensaje = "Debe indicar un Id válido para buscar.";
            claseAviso = "alert alert-warning";
            return;
        }

        try
        {
            var cliente = fabricaHttp.CreateClient("ApiTipoProyectos");
            var ruta = $"{urlBaseApi}/id/{tipoproyectoActual.Id}";
            RespuestaApi<List<TipoProyectoModel>>? respuesta = await cliente.GetFromJsonAsync<RespuestaApi<List<TipoProyectoModel>>>(ruta);
            var encontrado = respuesta?.Datos?.FirstOrDefault();

            if (encontrado is not null)
            {
                tipoproyectoActual = new TipoProyectoModel
                {
                    Id = encontrado.Id,
                    Nombre = encontrado.Nombre,
                    Descripcion = encontrado.Descripcion,
                };
                existeTipoProyecto = true;
                textoBotonGuardar = "Actualizar";
                mensaje = "Tipo de Proyecto cargado en el formulario.";
                claseAviso = "alert alert-success";
            }
            else
            {
                existeTipoProyecto = false;
                textoBotonGuardar = "Crear";
                mensaje = "Tipo de Proyecto no encontrado.";
                claseAviso = "alert alert-warning";
            }
        }
        catch (Exception error)
        {
            existeTipoProyecto = false;
            textoBotonGuardar = "Crear";
            mensaje = $"Error al buscar el Tipo de Proyecto: {error.Message}";
            claseAviso = "alert alert-danger";
        }
    }

    private async Task GuardarSegunTipoProyecto()
    {
        if (existeTipoProyecto)
            await ActualizarTipoProyecto();
        else
            await CrearTipoProyecto();
    }

    private async Task CrearTipoProyecto()
{
    LimpiarMensajes();


    var datosParaCrear = new 
    {
        Nombre = tipoproyectoActual.Nombre,
        Descripcion = tipoproyectoActual.Descripcion,
    };

    try
    {
        var cliente = fabricaHttp.CreateClient("ApiTipoProyectos");
        var respuesta = await cliente.PostAsJsonAsync(urlBaseApi, datosParaCrear);

        if (respuesta.IsSuccessStatusCode)
        {
            mensaje = "Tipo de Proyecto creado correctamente.";
            claseAviso = "alert alert-success";

            await CargarTipoProyectos();

            tipoproyectoActual = new TipoProyectoModel();
            existeTipoProyecto = false;
            textoBotonGuardar = "Crear";
        }
        else
        {
            var detalle = await respuesta.Content.ReadAsStringAsync();
            mensaje = $"No se pudo crear el tipo de proyecto. Detalle: {detalle}";
            claseAviso = "alert alert-danger";
        }
    }
    catch (Exception error)
    {
        mensaje = $"Error al crear tipo de proyecto: {error.Message}";
        claseAviso = "alert alert-danger";
    }
}

    private async Task ActualizarTipoProyecto()
{
    LimpiarMensajes();

    if (tipoproyectoActual.Id <= 0)
    {
        mensaje = "Debe indicar el Id para actualizar.";
        claseAviso = "alert alert-warning";
        return;
    }

    // 1. Se crea objeto que exluye 'Id' de la actualizacion.
    var datosParaActualizar = new 
    {
        Nombre = tipoproyectoActual.Nombre,
        Descripcion = tipoproyectoActual.Descripcion,
    };

    try
    {
        var cliente = fabricaHttp.CreateClient("ApiTipoProyectos");
        var ruta = $"{urlBaseApi}/id/{tipoproyectoActual.Id}";
        
        // 2. ENVIAMOS EL OBJETO DTO (SIN EL ID)
        var respuesta = await cliente.PutAsJsonAsync(ruta, datosParaActualizar);

        if (respuesta.IsSuccessStatusCode)
        {
            mensaje = "TipoProyecto actualizado correctamente.";
            claseAviso = "alert alert-success";

            await CargarTipoProyectos();

            existeTipoProyecto = true;
            textoBotonGuardar = "Actualizar";
        }
        else
        {
            var detalle = await respuesta.Content.ReadAsStringAsync();
            mensaje = $"No se pudo actualizar el tipoproyecto. Detalle: {detalle}";
            claseAviso = "alert alert-danger";
        }
    }
    catch (Exception error)
    {
        mensaje = $"Error al actualizar tipoproyecto: {error.Message}";
        claseAviso = "alert alert-danger";
    }
}

    private async Task EliminarTipoProyecto()
    {
        LimpiarMensajes();

        if (tipoproyectoActual.Id <= 0)
        {
            mensaje = "Debe indicar el Id para eliminar.";
            claseAviso = "alert alert-warning";
            return;
        }

        try
        {
            var cliente = fabricaHttp.CreateClient("ApiTipoProyectos");
            var ruta = $"{urlBaseApi}/id/{tipoproyectoActual.Id}";
            var respuesta = await cliente.DeleteAsync(ruta);

            if (respuesta.IsSuccessStatusCode)
            {
                mensaje = "TipoProyecto eliminado correctamente.";
                claseAviso = "alert alert-success";

                await CargarTipoProyectos();

                LimpiarFormulario();
            }
            else
            {
                var detalle = await respuesta.Content.ReadAsStringAsync();
                mensaje = $"No se pudo eliminar el tipoproyecto. Detalle: {detalle}";
                claseAviso = "alert alert-danger";
            }
        }
        catch (Exception error)
        {
            mensaje = $"Error al eliminar tipoproyecto: {error.Message}";
            claseAviso = "alert alert-danger";
        }
    }

    // =============================================================================
    // AUXILIARES
    // =============================================================================
    private async Task ProbarConexion()
    {
        LimpiarMensajes();

        try
        {
            var cliente = fabricaHttp.CreateClient("ApiTipoProyectos");
            var respuesta = await cliente.GetAsync(urlBaseApi);

            if (respuesta.IsSuccessStatusCode)
            {
                mensaje = "Conexión con la API verificada.";
                claseAviso = "alert alert-success";
            }
            else
            {
                mensaje = $"La API respondió con tipoproyecto {(int)respuesta.StatusCode}.";
                claseAviso = "alert alert-warning";
            }
        }
        catch (Exception error)
        {
            mensaje = $"Error de conexión a la API: {error.Message}";
            claseAviso = "alert alert-danger";
        }
    }

    private void CargarEnFormulario(TipoProyectoModel u)
    {
        tipoproyectoActual = new TipoProyectoModel()
        {
            Id = u.Id,
            Nombre = u.Nombre,
            Descripcion = u.Descripcion,
        };

        existeTipoProyecto = true;
        textoBotonGuardar = "Actualizar";
        mensaje = "TipoProyecto seleccionado desde el listado.";
        claseAviso = "alert alert-info";
    }

    private void LimpiarMensajes()
    {
        mensaje = "";
        claseAviso = "alert alert-info";
    }

    private void LimpiarFormulario()
    {
        tipoproyectoActual = new TipoProyectoModel();
        existeTipoProyecto = false;
        textoBotonGuardar = "Crear";
        LimpiarMensajes();
    }
}
